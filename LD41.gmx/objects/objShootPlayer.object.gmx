          <argument>
            <kind>1</kind>
            <string>// Walk around

var walkSpeed = 2

var h = 0
if keyboard_check_direct(ord('A')) {
    h = -walkSpeed
} else if keyboard_check_direct(ord('D')) {
    h = walkSpeed
}
var v = 0
if keyboard_check_direct(ord('W')) {
    v = -walkSpeed
} else if keyboard_check_direct(ord('S')) {
    v = walkSpeed
}

// Animate the player sprite

if mouse_x &lt; x {
    drawXScale = -1
}
if mouse_x &gt; x {
    drawXScale = 1
}

if h != 0 or v != 0 {
    sprite_index = sprPlayerWalk
    image_speed = 1/5
} else {
    sprite_index = sprPlayerIdle
}

// Move
scrMoveContactWalls(h, v)

// Shoot bullets
aimDir = point_direction(x, y, mouse_x, mouse_y)
if mouse_check_button(mb_left) {
    var d = 13
    var dir = aimDir + random_range(-3, 3)
    
    var xx = x+lengthdir_x(d, other.aimDir)
    var yy = y+lengthdir_y(d, other.aimDir)+1
    
    with instance_create(x, y, objPlayerBullet) {
        direction = dir
        image_angle = direction
        speed = 10
        
        // Check for collisions at the center of the player
        // before moving to the spawn point at the end of the gun.
        // (to kill any enemies that are directly on top of you first)
        scrPlayerBulletCheckCollisions()
        x = xx
        y = yy
        scrPlayerBulletCheckCollisions()
    }
    
    // Play gunshot sound
    if shootT mod 4 == 0 {
        audio_play_sound(sndGunshot, 0, false)
    }
    shootT ++
} else {
    shootT = 0
}

// Move the camera
view_xview += (x-view_wview/2 - view_xview) * 0.2
view_yview += (y-view_hview/2 - view_yview) * 0.2

// Count down iframes
if iframes &gt; 0 {
    iframes --
}

// Die
if hp &lt;= 0 {
    instance_destroy()
    with scrCreatePoof(x, y) {
        sprite_index = choose(sprPoof4, sprPoof5)
    }
    objShootController.enabled = false
    objGameController.state = GAME_STATE.GAMEOVER
    instance_create(0, 0, objGameOverController)
    objGameOverController.numFactories = objCityBuilder.numFactories
}
</string>
