            <string>// Walk around

var walkSpeed = 2

var h = 0
if keyboard_check(ord('A')) {
    h = -walkSpeed
} else if keyboard_check(ord('D')) {
    h = walkSpeed
}
var v = 0
if keyboard_check(ord('W')) {
    v = -walkSpeed
} else if keyboard_check(ord('S')) {
    v = walkSpeed
}

if h &lt; 0 {
    drawXScale = -1
}
if h &gt; 0 {
    drawXScale = 1
}

var xprev = x;
var yprev = y;

x += h
y += v

// If we just walked into a wall, move back, and then rub up against walls
// in the x direction and the y direction.
// Same with moving outside the city.

if place_meeting(x, y, objWall) or not place_meeting(x, y, objCityCell) {
    x = xprev
    y = yprev
    
    for (var i=0; i&lt;abs(h); i++) {
        x += sign(h)
        if place_meeting(x, y, objWall) or not place_meeting(x, y, objCityCell) {
            x -= sign(h)
            break
        }
    }
    
    for (var i=0; i&lt;abs(v); i++) {
        y += sign(v)
        if place_meeting(x, y, objWall) or not place_meeting(x, y, objCityCell) {
            y -= sign(v)
            break
        }
    }
}

// Shoot bullets

if mouse_check_button(mb_left) {
    var shootDir = point_direction(x, y, mouse_x, mouse_y)
    with instance_create(x, y, objPlayerBullet) {
        direction = shootDir
        speed = 10
    }
}

// Move the camera

view_xview += (x-view_wview/2 - view_xview) * 0.2
view_yview += (y-view_hview/2 - view_yview) * 0.2
</string>
